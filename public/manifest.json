{
  "name": "plan.pixelplus.ru Injection",
  "version": "1.7.0",
  "description": "Расширение функционала сайта plan.pixelplus.ru",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 3,
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://plan.pixelplus.ru/*"
      ],
      "js": [
        "isolated.js"
      ],
      "world": "ISOLATED"
    },
    {
      "all_frames": true,
      "matches": [
        "https://plan.pixelplus.ru/*"
      ],
      "js": [
        "main.js"
      ],
      "world": "MAIN"
    }
  ],
  "host_permissions": [
    "https://plan.pixelplus.ru/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  }
}
